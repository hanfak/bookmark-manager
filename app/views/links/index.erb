<h1>Bookmark Manager</h1>
<h2>Links</h2>
<ul id="links">
  <% @links.each do |link| %>
  <li>
    Title:  <%= link.title  %>
    URL:    <a href= "<%= link.url %>" ><%= link.url %></a>
    Tags: <%= link.tags.map(&:name).join  %>
  </li>
  <% end %>
</ul>

<p>
  <a href="/links/new">Add link</a>
</p>
